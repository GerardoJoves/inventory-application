extends layout.pug

block content
  main
    form.styledForm(method='POST')
      h1.title= title
      div.formGroup
        label(for='name') Genre Name:
        input(
          type='text'
          id='name'
          name='name'
          required
          value= values && values.name ? values.name : null
        )
        if errors && errors.name
          span= errors.name.msg
      
      div
        button(type='submit') Create Genre
      